{% extends '@TviMonitor/UI/bootstrap3/layout.html.twig' %}

{% use '@TviMonitor/UI/bootstrap3/filter.html.twig' %}
{% use '@TviMonitor/UI/bootstrap3/result.html.twig' %}
{% use '@TviMonitor/UI/bootstrap3/progress.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/tvimonitor/css/style.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js"></script>
    <script src="{{ asset('bundles/tvimonitor/javascript/tviMonitor.js') }}"></script>

    <script>
        $(function () {
            $('.check-result-filter .selectpicker').selectpicker();
            $('.check-result-filter [type="reset"]').on('click', function () {
                $('.check-result-filter .selectpicker').selectpicker('deselectAll');
                return false;
            });
            $(".tvi-monitoring").tviMonitor()
        })
    </script>
    
{% endblock %}

{% block content %}

    {{ parent() }}

    <div class="tvi-monitoring">

        {% block filter %}
            <div class="container-fluid">
                {{ parent() }}
            </div>
        {% endblock %}

        {% block progress %}
            <div class="container-fluid" style="margin-top:10px">
                {{ parent() }}
            </div>
        {% endblock %}

        {% block result %}
            <div class="container-fluid">
                {{ parent() }}
            </div>
        {% endblock %}

    </div>

{% endblock %}
